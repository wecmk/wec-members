{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}
{% block covid %}
{% endblock %}
{% block content %}
    <h1>Series</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ series.uuid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ series.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ series.description }}</td>
            </tr>
            <tr>
                <th>Complete</th>
                <td>{{ series.complete ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ series.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ series.deletedAt ? series.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ series.createdAt ? series.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ series.updatedAt ? series.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('series_index') }}">back to list</a>

    <a href="{{ path('series_edit', {'id': series.id}) }}">edit</a>

    {{ include('series/_delete_form.html.twig') }}
{% endblock %}
